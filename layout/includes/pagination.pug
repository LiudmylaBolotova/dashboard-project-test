.pagination
  ul.pagination__list
    li.pagination__item
      a.pagination__link(href="#")
        svg.pagination__item__svg
          use(href="./images/icons.svg#icon-left-pug")
    li.pagination__item
      a.pagination__link.pagination__link--active(href="#" class="active") 1
    li.pagination__item
      a.pagination__link(href="#") 2
    li.pagination__item
      a.pagination__link(href="#") 3
    li.pagination__item
      a.pagination__link(href="#") 4
    li.pagination__link--dashed
      sub.pagination__link--span ...
    li.pagination__item
      a.pagination__link(href="#") 40
    li.pagination__item
      a.pagination__link(href="#")
        svg.pagination__item__svg
          use(href="./images/icons.svg#icon-right-pug")